<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.watermelon.luomi.panda.activity.CommentsActivity">

    <include layout="@layout/toolbar"></include>

    <include layout="@layout/line"></include>

    <space.sye.z.library.RefreshRecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorTheme"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen2"
        android:paddingBottom="@dimen/dimen2"
        android:background="@android:color/white">
        <EditText
            android:layout_marginLeft="@dimen/dimen8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/please_comment"
            android:background="@drawable/comment_background"
            android:textColor="@color/colorIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回帖"
            android:textSize="@dimen/dimen16"
            android:padding="@dimen/dimen8"/>
    </LinearLayout>
</LinearLayout>
